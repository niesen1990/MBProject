<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rv_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/activity_vertical_margin"
    android:padding="2dp">

    <RelativeLayout
        android:id="@+id/rl_case_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp">

        <TextView
            android:id="@+id/tv_case_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:text="Name"
            android:textColor="@android:color/background_dark"
            />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_case_up"
        android:padding="2dp">

        <TextView
            android:id="@+id/tv_case_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="2dp"
            android:drawableLeft="@drawable/ic_time_small"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:padding="2dp"
            android:text="03-26 15ï¼š30"
            android:textColor="@android:color/background_dark"/>

        <TextView
            android:id="@+id/tv_case_replay_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_toRightOf="@id/tv_case_time"
            android:drawableLeft="@drawable/ic_message_small"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:padding="2dp"
            android:text="0"
            android:textColor="@android:color/background_dark"/>
    </RelativeLayout>
</RelativeLayout>