<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/cardview"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="@dimen/activity_vertical_margin_half"
    android:layout_marginRight="@dimen/activity_vertical_margin_half"
    android:layout_marginTop="4dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="0dp"
    app:cardElevation="2dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:app="http://schemas.android.com/apk/res-auto"
                  xmlns:tools="http://schemas.android.com/tools"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="@dimen/activity_vertical_margin_half"
                  android:layout_marginRight="@dimen/activity_vertical_margin_half"
                  android:orientation="vertical"
                  android:padding="@dimen/activity_vertical_margin_half">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp">

            <ImageView
                android:id="@+id/riv_head"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:alpha="1"
                android:src="@drawable/ic_loading"/>

            <RelativeLayout
                android:id="@+id/rl_header_up"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/riv_head">

                <TextView
                    android:id="@+id/tv_header_up_name"
                    style="@android:style/TextAppearance.DeviceDefault.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_vertical_margin"
                    android:textColor="@android:color/background_dark"
                    tools:text="Name"/>


                <TextView
                    android:id="@+id/tv_header_down_text02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_margin="2dp"
                    android:drawableLeft="@drawable/ic_message_small"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/transparent_black"/>


                <TextView
                    android:id="@+id/tv_master"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/activity_vertical_margin"
                    android:textColor="@color/gold"
                    tools:text="MEIZU"/>

            </RelativeLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_center_content01"
            style="@android:style/TextAppearance.DeviceDefault.Medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin_half"
            android:lines="1"
            android:textColor="@android:color/background_dark"
            tools:text="内容.内容.内容.内容.内容.内容.内容.内容.内容."/>

        <TextView
            android:id="@+id/tv_center_content02"
            style="@android:style/TextAppearance.DeviceDefault.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin_half"
            android:lines="1"
            android:textColor="@color/dimgray"
            tools:text="内容.内容.内容.内容.内容.内容.内容.内容.内容.内容."/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin_half"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/psiv_small_icon01"
                android:layout_width="0dp"
                android:layout_height="96dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:visibility="gone"
                tools:src="@drawable/ic_loading"
                />

            <ImageView
                android:id="@+id/psiv_small_icon02"
                android:layout_width="0dp"
                android:layout_height="96dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:visibility="gone"
                tools:src="@drawable/ic_loading"/>

            <ImageView
                android:id="@+id/psiv_small_icon03"
                android:layout_width="0dp"
                android:layout_height="96dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:visibility="gone"
                tools:src="@drawable/ic_loading"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_header_down_text01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="2dp"
            android:drawableLeft="@drawable/ic_time_small"
            android:gravity="center"
            android:padding="3dp"
            android:textColor="@color/transparent_black"
            tools:text="shijan"/>
    </LinearLayout>

</android.support.v7.widget.CardView>