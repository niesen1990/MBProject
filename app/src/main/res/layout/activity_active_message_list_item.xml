<android.support.v7.widget.CardView
    android:id="@+id/cardview"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="@dimen/activity_vertical_margin_half"
    android:layout_marginRight="@dimen/activity_vertical_margin_half"
    android:layout_marginTop="4dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="0dp"
    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_vertical_margin_half">


        <RelativeLayout
            android:id="@+id/rl_header_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/riv_head"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="2dp"
                android:alpha="1"
                android:src="@drawable/ic_loading"/>

            <TextView
                android:id="@+id/tv_header_up_name"
                style="@android:style/TextAppearance.DeviceDefault.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/riv_head"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_toRightOf="@id/riv_head"
                android:text="nike"
                android:textColor="@color/dimgray"/>

            <ImageView
                android:id="@+id/iv_header_up_icon1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/riv_head"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_toRightOf="@+id/riv_head"
                android:src="@drawable/ranktag1"/>

            <ImageView
                android:id="@+id/iv_header_up_icon2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/riv_head"
                android:layout_margin="4dp"
                android:layout_toRightOf="@id/iv_header_up_icon1"
                android:src="@drawable/lv1"/>

            <TextView
                android:id="@+id/tv_master"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/riv_head"
                style="@android:style/TextAppearance.DeviceDefault.Small"
                android:layout_centerVertical="true"
                android:background="@drawable/shape_background_round_blue"
                android:layout_marginLeft="@dimen/activity_vertical_margin_half"
                android:layout_toRightOf="@id/tv_header_up_name"
                android:text="test"
                android:textColor="@color/gold"/>

        </RelativeLayout>


        <TextView
            android:id="@+id/tv_center_content01"
            style="@android:style/TextAppearance.DeviceDefault.Medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_header_up"
            android:layout_marginLeft="@dimen/activity_vertical_margin_half"
            android:layout_marginRight="@dimen/activity_vertical_margin_half"
            android:lines="1"
            android:padding="3dp"
            android:textColor="@color/dimgray"
            tools:text="333333333333333333333333333"/>

        <TextView
            android:id="@+id/tv_center_content02"
            style="@android:style/TextAppearance.DeviceDefault.Medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_center_content01"
            android:layout_marginBottom="@dimen/activity_vertical_margin_half"
            android:layout_marginLeft="@dimen/activity_vertical_margin_half"
            android:layout_marginRight="@dimen/activity_vertical_margin_half"
            android:layout_marginTop="4dp"
            android:background="@color/transparent_gray"
            android:gravity="center"
            android:lines="1"
            android:padding="@dimen/activity_vertical_margin_half"
            android:textColor="@color/darkgray"
            tools:text="回复我的主题：MEIZU"/>

        <TextView
            android:id="@+id/tv_header_down_text01"
            style="@android:style/TextAppearance.DeviceDefault.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_center_content02"
            android:layout_margin="1dp"
            android:drawableLeft="@drawable/ic_time_small"
            android:gravity="center"
            android:padding="3dp"
            android:textColor="@color/darkgray"
            tools:text="111111111"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>