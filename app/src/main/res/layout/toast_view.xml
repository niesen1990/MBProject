<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:background="@color/transparent_black"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin_half"
        android:paddingLeft="10.0dip"
        android:paddingRight="10.0dip"
        android:paddingTop="@dimen/activity_vertical_margin_half">

        <ImageView
            android:id="@+id/icon_iv"
            android:layout_width="wrap_content"
            android:layout_height="40.0dip"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/activity_vertical_margin_half"
            android:scaleType="fitCenter"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignWithParentIfMissing="true"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/icon_iv"
            android:gravity="center_vertical"
            android:textColor="@android:color/white"
            android:textSize="16.0dip"/>
    </RelativeLayout>


</FrameLayout>
