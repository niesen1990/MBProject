<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/cardview"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="@dimen/activity_vertical_margin_half"
    android:layout_marginRight="@dimen/activity_vertical_margin_half"
    android:layout_marginTop="4dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="0dp"
    app:cardElevation="2dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:descendantFocusability="blocksDescendants">

        <RelativeLayout
            android:id="@+id/rl_01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false">

            <ImageView
                android:id="@+id/civ_head"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/activity_vertical_margin_half"
                android:src="@drawable/ic_loading"/>

            <TextView
                android:id="@+id/tv_nick"
                style="@android:style/TextAppearance.DeviceDefault.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/civ_head"
                android:layout_marginTop="@dimen/activity_vertical_margin_half"
                android:layout_toRightOf="@id/civ_head"
                android:text="小样"
                android:textColor="@android:color/background_dark"/>

            <TextView
                android:id="@+id/activity_baby_tv_nick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/civ_head"
                android:layout_marginBottom="4dp"
                android:layout_toRightOf="@id/civ_head"
                android:text="生日:"
                android:textColor="#6000"/>


            <TextView
                android:id="@+id/tv_birthday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/civ_head"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="@dimen/activity_vertical_margin_half"
                android:layout_toRightOf="@id/activity_baby_tv_nick"
                android:text="生日：2015-05-21"
                android:textColor="@color/dimgray"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_02"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@id/rl_01"
            android:layout_margin="@dimen/activity_vertical_margin_half"
            android:focusable="false"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv02_daily_left"
                style="@android:style/TextAppearance.DeviceDefault.Medium"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="成长日记 "
                android:textColor="@color/background_floating_material_dark"/>

            <TextView
                android:id="@+id/tv_daily_value"
                style="@android:style/TextAppearance.DeviceDefault.Small.Inverse"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/tv02_daily_left"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="1"
                android:textColor="@color/hotpink"/>

            <TextView
                android:id="@+id/tv02_daily_right"
                style="@android:style/TextAppearance.DeviceDefault.Medium"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/tv_daily_value"
                android:gravity="center_vertical"
                android:text=" 篇"
                android:textColor="@color/background_floating_material_dark"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_03"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@id/rl_02"
            android:layout_margin="@dimen/activity_vertical_margin_half"
            android:focusable="false">

            <TextView
                android:id="@+id/tv02_friend_left"
                style="@android:style/TextAppearance.DeviceDefault.Medium"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="同龄伙伴 "
                android:textColor="@color/background_floating_material_dark"/>

            <TextView
                android:id="@+id/tv_friend_value"
                style="@android:style/TextAppearance.DeviceDefault.Small.Inverse"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/tv02_friend_left"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="1"
                android:textColor="@color/hotpink"/>

            <TextView
                android:id="@+id/tv02_friend_right"
                style="@android:style/TextAppearance.DeviceDefault.Medium"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/tv_friend_value"
                android:gravity="center_vertical"
                android:text=" 名"
                android:textColor="@color/background_floating_material_dark"/>

        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>