<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/cardview"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="@dimen/activity_vertical_margin_half"
    android:layout_marginRight="@dimen/activity_vertical_margin_half"
    android:layout_marginTop="4dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="0dp"
    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin_half"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin_half">

        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:alpha="1"
            tools:src="@drawable/ic_loading"/>

        <TextView
            android:id="@+id/tv_constellation"
            style="@android:style/TextAppearance.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_toEndOf="@id/iv_head"
            android:layout_toRightOf="@id/iv_head"
            android:text="【水瓶座】"
            android:textColor="@color/hotpink"/>

        <TextView
            android:id="@+id/tv_post"
            style="@android:style/TextAppearance.Small.Inverse"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="5dp"
            android:drawableLeft="@drawable/ic_post_count"
            android:gravity="center"
            android:text="199"
            android:textColor="@color/hotpink"/>

        <TextView
            android:id="@+id/tv_content"
            style="@android:style/TextAppearance.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_constellation"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            android:layout_marginTop="16dp"
            android:layout_toEndOf="@id/iv_head"
            android:layout_toRightOf="@id/iv_head"
            android:singleLine="true"
            android:text="content"
            android:textColor="@color/dimgray"/>


    </RelativeLayout>
</android.support.v7.widget.CardView>
