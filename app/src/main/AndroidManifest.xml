<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="com.cmbb.smartkids"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 这个权限用于进行网络定位-->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"></uses-permission>
    <!-- 这个权限用于访问GPS定位-->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"></uses-permission>
    <!-- 用于访问wifi网络信息，wifi信息会用于进行网络定位-->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"></uses-permission>
    <!-- 获取运营商信息，用于支持提供运营商信息相关的接口-->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"></uses-permission>
    <!-- 这个权限用于获取wifi的获取权限，wifi信息会用来进行网络定位-->
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE"></uses-permission>
    <!-- 用于读取手机当前的状态-->
    <uses-permission android:name="android.permission.READ_PHONE_STATE"></uses-permission>
    <!-- 写入扩展存储，向扩展卡写入数据，用于写入离线定位数据-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>
    <!-- 访问网络，网络定位需要上网-->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- SD卡读取权限，用户写入离线定位数据-->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"></uses-permission>
    <!-- 读写sdcard，storage等等 -->
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <!-- 允许程序录制音频 -->
    <uses-permission android:name="android.permission.READ_LOGS"/>

    <application
        android:name=".base.MApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <!-- umeng-analytics -->
        <meta-data
            android:name="UMENG_APPKEY"
            android:value="5538a77367e58e41e0000c09"/>
        <meta-data
            android:name="UMENG_CHANNEL"
            android:value="${UMENG_CHANNEL_VALUE}"/>
        <!-- umeng-analytics -->


        <!-- umeng-update -->
        <service
            android:name="com.umeng.update.net.DownloadingService"
            android:process=":DownloadingService">
        </service>

        <activity
            android:name="com.umeng.update.UpdateDialogActivity"
            android:theme="@android:style/Theme.Translucent.NoTitleBar">
        </activity>
        <!-- umeng-update -->
        <!-- Baidu Location -->
        <meta-data
            android:name="com.baidu.lbsapi.API_KEY"
            android:value="yad43op0GDKnFliKgy5S1QX2"/>

        <service
            android:name="com.baidu.location.f"
            android:enabled="true"
            android:process=":remote"/>
        <!-- Baidu Location -->

        <!-- MengPhotoPicker -->
        <activity
            android:name="com.cmbb.smartkids.photopicker.PhotoPickerActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"/>
        <activity android:name="com.cmbb.smartkids.photopicker.PhotoPagerActivity"/>
        <!-- MengPhotoPicker -->
        <provider
            android:name=".provider.ProviderUserAccount"
            android:authorities="com.cmbb.smartkids.useraccount"
            android:enabled="true"
            android:exported="false"/>

        <activity
            android:name=".activity.SplashActivity"
            android:label="@string/title_activity_home"
            android:theme="@style/FullScreen.Theme"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".activity.GuideActivity"
            android:label="GuideActivity"
            android:theme="@style/FullScreen.Theme"
            />

        <activity android:name=".activity.HomeActivity"
            android:label="HomeActivity"/>

    </application>

</manifest>
